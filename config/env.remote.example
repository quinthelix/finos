# Remote (Fly.io + Supabase) environment variables
NODE_ENV=production
ENVIRONMENT=remote
DATABASE_URL=postgres://<SUPABASE_DB_URL>
SUPABASE_URL=https://<PROJECT>.supabase.co
SUPABASE_ANON_KEY=<SUPABASE_ANON_KEY>
SUPABASE_SERVICE_KEY=<SUPABASE_SERVICE_KEY>
GATEWAY_PUBLIC_URL=https://<fly-app-name>.fly.dev
MARKET_SCRAPER_INTERVAL=60000
TRADE_PROVIDER=sim
JWT_AUDIENCE=authenticated
JWT_ISSUER=https://<PROJECT>.supabase.co/auth/v1
JWT_JWKS_URL=<SUPABASE_JWKS_URL>

# ERP simulator
ERP_SIM_PORT=4001
ERP_SIM_TICK_MS=10000
ERP_SIM_BASE_CURRENCY=USD

# ERP extractor
ERP_EXTRACTOR_PORT=4002
ERP_EXTRACTOR_GRPC_PORT=50051
ERP_SIM_BASE_URL=http://erp-sim:4001
ERP_EXTRACTOR_PUBLIC_URL=https://<extractor-public-url-if-exposed>
ERP_EXTRACTOR_POLL_MS=30000

# API Gateway
API_GATEWAY_PORT=8080
ERP_EXTRACTOR_GRPC_ADDR=erp-extractor:50051
