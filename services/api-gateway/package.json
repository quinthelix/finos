{
  "name": "api-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/index.cjs",
    "start": "node dist/index.cjs",
    "proto:generate": "./node_modules/.bin/grpc_tools_node_protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/generated --ts_proto_opt=esModuleInterop=true,outputServices=grpc-js,forceLong=string --proto_path=../../protos ../../protos/erp_extractor.proto ../../protos/common.proto",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "fastify": "^4.26.2",
    "pino": "^8.21.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.9.0",
    "esbuild": "^0.21.5",
    "grpc-tools": "^1.12.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-proto": "^1.167.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
